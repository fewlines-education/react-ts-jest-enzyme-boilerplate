{
  "name": "react-ts-jest-enzyme-boilerplate",
  "version": "1.0.0",
  "description": "This is the react-ts-jest-enzyme app boilerplate used during our bootcamp.",
  "main": "./src/index.tsx",
  "repository": "git@github.com:fewlines-education/react-ts-jest-enzyme-boilerplate.git",
  "author": "Fewlines",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "webpack-dev-server --mode=development --open --hot",
    "build": "webpack --mode=production",
    "test": "yarn jest",
    "lint": "eslint \"{src,pages}/**/*.{js,ts,jsx,tsx}\""
  },
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@types/enzyme": "3.10.7",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "26.0.15",
    "@types/react": "16.9.53",
    "@types/react-dom": "16.9.8",
    "@types/webpack-dev-server": "3.11.0",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.1",
    "babel-loader": "8.1.0",
    "css-loader": "4.3.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.3",
    "html-webpack-plugin": "4.5.0",
    "jest": "26.6.1",
    "prettier": "2.1.2",
    "style-loader": "2.0.0",
    "ts-jest": "26.4.1",
    "ts-loader": "8.0.6",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "ignorePatterns": "webpack.config.js",
    "rules": {
      "react/prop-types": 0,
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "always",
          "trailingComma": "all"
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "verbose": true,
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "moduleDirectories": [
      "node_modules",
      "config"
    ],
    "moduleNameMapper": {
      "\\.(png|svg|jpg|gif|eot|ttf|woff|woff2)$": "<rootDir>/tests/config/jest-import-fix.ts",
      "\\.(css|less)$": "<rootDir>/tests/config/jest-import-fix.ts"
    },
    "setupFilesAfterEnv": [
      "./tests/config/enzyme-config.ts"
    ]
  }
}
